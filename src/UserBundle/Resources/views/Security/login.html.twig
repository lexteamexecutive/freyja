{% extends 'base.html.twig' %}

{% block body %}
  {% if error %}
      <div>{{ error.messageKey|trans({'Invalid credentials.': 'Login ou mot de passe incorrect'}) }}</div>
  {% endif %}

  <form action="{{ path('security_user_login') }}" method="post">
      <input
        type="text"
        id="username"
        name="_username"
        value="{{ last_username }}"
        placeholder="Email" />
      <input
        type="password"
        id="password"
        name="_password"
        placeholder="Mot de passe" />

      <input type="hidden" name="_csrf_token"
              value="{{ csrf_token('authenticate') }}"
          >
      <button type="submit">Se connecter</button>
  </form>
{% endblock %}
